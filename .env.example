# LLM API Keys
OPENROUTER_API_KEY=your_openrouter_api_key
OPENAI_API_KEY=your_openai_api_key  # Optional, for direct OpenAI access

# Vector Database Configuration
QDRANT_URL=http://localhost:6333  # Change to your Qdrant URL
QDRANT_API_KEY=your_qdrant_api_key  # Optional, for hosted Qdrant

# LanceDB Configuration
LANCEDB_DATA_DIR=./data/lance  # Path to store LanceDB data
USE_OPENAI_EMBEDDINGS=true  # Whether to use OpenAI embeddings
USE_LEGACY_MEMORY=false  # Whether to maintain backward compatibility with JSON memory

# Embedding Configuration
OPENAI_EMBEDDING_MODEL=text-embedding-3-small  # OpenAI embedding model

# Agent Configuration
CHLOE_SYSTEM_PROMPT=override_default_system_prompt  # Optional, overrides default
DEFAULT_LLM_MODEL=openrouter/anthropic/claude-3-opus:2024-05-01
DEFAULT_EMBEDDING_MODEL=openai/text-embedding-3-small

# Notification Services
DISCORD_TOKEN=your_discord_bot_token  # Optional, for Discord notifications
DISCORD_CHANNEL_ID=your_discord_channel_id  # Optional, for Discord notifications

# Web UI Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# System Paths
DATA_PATH=./data  # Path to store data files
LOGS_PATH=./logs  # Path for log files

# Development Settings
DEBUG=false  # Set to true for more verbose logging
NODE_ENV=development  # Change to production for production environment 