{
  "extends": "@crowd-wisdom/typescript-config/base.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@crowd-wisdom/shared": ["../shared/src"]
    },
    "composite": true,
    "incremental": true,
    "skipLibCheck": true
  },
  "references": [
    { "path": "../shared" }
  ]
} 