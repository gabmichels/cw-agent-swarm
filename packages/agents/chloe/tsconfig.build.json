{
  "extends": "./tsconfig.json",
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "noEmit": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": false,
    "composite": false,
    "declaration": true,
    "declarationMap": true
  }
} 