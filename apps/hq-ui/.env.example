# OpenAI API key
OPENAI_API_KEY=your_openai_api_key

# OpenRouter API key (alternative to OpenAI)
OPENROUTER_API_KEY=your_openrouter_api_key

# Discord webhook for notifications
# Create a webhook in your Discord server's channel settings
# and paste the URL here to enable automatic notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Enable automatic notifications based on agent message intent
# Set to 1 to enable, 0 to disable
ENABLE_AUTO_NOTIFICATIONS=1

# Development mode flag for Chloe
# Set to 1 to enable, 0 to disable
CHLOE_DEV_MODE=0 